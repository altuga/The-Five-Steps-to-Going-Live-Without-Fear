#############
# Build layer
FROM mcr.microsoft.com/openjdk/jdk:21-mariner AS mavenBuild

    COPY pom.xml /tmp/
    COPY src /tmp/src/
    COPY mvnw /tmp/mvnw
    COPY .mvn /tmp/.mvn

    WORKDIR /tmp/

    RUN ./mvnw package && \
        mkdir /staging

# Runtime image
FROM mcr.microsoft.com/openjdk/jdk:21-distroless

    COPY --from=mavenBuild /tmp/target/*.jar /example.jar

    CMD ["-jar", "/example.jar"]
